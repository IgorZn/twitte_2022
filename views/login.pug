extends layouts/login-layout

block content
    .loginContainer
        h1= title
        p Welcome to #{title}
        form(method="post")
            input(type="text", name="logUserName", placeholder="User name or email", required="")
            input(type="password", name="logPassword", placeholder="Password", required="")
            input(type="submit", value="Login")
        a(href="/register") Need an account?